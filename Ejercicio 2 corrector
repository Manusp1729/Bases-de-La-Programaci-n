#include <iostream>
#include <string>
using namespace std;

class Fecha {
private:
    int dia, mes, anio;
public:
    Fecha(int, int, int);      
    void abreviada();          
    Fecha incremento(int);
};

Fecha::Fecha(int d, int m, int a) {
    dia = d;
    mes = m;
    anio = a;
}
void Fecha::abreviada() {
    cout << dia << "/" << mes << "/" << anio;
}

Fecha Fecha::incremento(int n) {
    int d = dia + n, m = mes, a = anio;
    while (d > 30) {
        d -= 30;
        m++;
        if (m > 12) { m = 1; a++; }
    }
    return Fecha(d, m, a);
}

int main() {
    Fecha f1(16, 2, 2023);
    f1.abreviada();         
    cout << endl;

    Fecha f2 = f1.incremento(20);
    f2.abreviada();        
    cout << endl;

    return 0;
}
